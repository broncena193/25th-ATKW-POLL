<script>
// Populate dropdown with spots 1-40
const select = document.getElementById('spot');
for(let i=1;i<=40;i++){
  const opt=document.createElement('option');
  opt.value='Spot '+i;
  opt.textContent='Spot '+i;
  select.appendChild(opt);
}

// Handle vote submission
const voteBtn=document.getElementById('voteBtn');
const thanks=document.getElementById('thanks');
const tableBody=document.querySelector('#voteTable tbody');

voteBtn.addEventListener('click',()=>{
  const val=select.value;
  if(!val){alert('Please select a spot!');return;}
  const votes=JSON.parse(localStorage.getItem('tt_votes')||'[]');
  const entry={spot:val,timestamp:new Date().toLocaleString()};
  votes.push(entry);
  localStorage.setItem('tt_votes',JSON.stringify(votes));
  thanks.style.display='block';
  select.value='';
  const row=document.createElement('tr');
  row.innerHTML=`<td>${entry.spot}</td><td>${entry.timestamp}</td>`;
  tableBody.appendChild(row);
});

// Admin export button
const exportBtn=document.getElementById('exportBtn');
exportBtn.addEventListener('click',()=>{
  const votes=JSON.parse(localStorage.getItem('tt_votes')||'[]');
  if(votes.length===0){alert('No votes to export');return;}
  let csv='Spot,Timestamp\\n';
  votes.forEach(v=>{csv+=`"${v.spot}","${v.timestamp}"\\n`;});
  const blob=new Blob([csv],{type:'text/csv'});
  const url=URL.createObjectURL(blob);
  const a=document.createElement('a');a.href=url;a.download='trunk_votes.csv';document.body.appendChild(a);a.click();a.remove();URL.revokeObjectURL(url);
});
</script>
</body>
